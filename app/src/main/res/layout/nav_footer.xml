<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/smile_website"
        android:src="@drawable/ic_globe"
        android:layout_marginEnd="10dp"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/smile_facebook"
        android:src="@drawable/ic_drawer_facebook"
        android:layout_marginEnd="10dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/smile_twitter"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_drawer_twitter"/>

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/smile_instagram"
    android:layout_marginEnd="10dp"
    android:src="@drawable/ic_drawer_instagram"/>
</LinearLayout>